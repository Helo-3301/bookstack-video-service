# BSVS Configuration

# Core
BSVS_PORT=8080
BSVS_DEBUG=false
BSVS_SECRET_KEY=change-me-in-production-use-32-chars

# Database
BSVS_DATABASE_URL=sqlite+aiosqlite:///./data/bsvs.db

# Storage
BSVS_STORAGE_TYPE=local
BSVS_STORAGE_PATH=./data/videos

# S3 Storage (optional, use instead of local)
# BSVS_S3_ENDPOINT=https://s3.amazonaws.com
# BSVS_S3_BUCKET=my-videos
# BSVS_S3_ACCESS_KEY=your-access-key
# BSVS_S3_SECRET_KEY=your-secret-key

# Transcoding
BSVS_TRANSCODE_WORKERS=2
BSVS_TRANSCODE_PRESETS=720p
BSVS_MAX_UPLOAD_SIZE_MB=2048

# Redis (for Celery task queue)
BSVS_REDIS_URL=redis://localhost:6379/0

# BookStack Integration
BSVS_BOOKSTACK_URL=http://localhost:6875
BSVS_BOOKSTACK_TOKEN_ID=
BSVS_BOOKSTACK_TOKEN_SECRET=
